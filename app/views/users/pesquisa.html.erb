<% provide(:title, 'Pesquisa') %>
<h1>Pesquisa</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :postalcode %>
      <%= f.text_field :postalcode %>

      <%= f.submit "Pesquisar", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>